# START OF FILE .env.example
# NoSlop Environment Configuration
# Copy this file to .env and customize for your environment

# ============================================================================
# Application Settings
# ============================================================================
APP_NAME=NoSlop
APP_VERSION=0.02
DEBUG=true

# ============================================================================
# Server Configuration
# ============================================================================
HOST=0.0.0.0
PORT=8000

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=INFO
LOG_DIR=logs
ENABLE_CONSOLE_LOG=true
ENABLE_FILE_LOG=true
ENABLE_JSON_LOG=false

# ============================================================================
# Ollama Configuration
# ============================================================================
OLLAMA_HOST=http://localhost:11434
OLLAMA_TIMEOUT=120

# Model Preferences (by task type)
MODEL_LOGIC=llama3.2          # For reasoning and planning
MODEL_VIDEO=llama3.2          # For video-related tasks
MODEL_IMAGE=llama3.2          # For image generation prompts
MODEL_MATH=llama3.2           # For calculations
MODEL_TTS=llama3.2            # For text-to-speech
MODEL_TTV=llama3.2            # For text-to-video
OLLAMA_DEFAULT_MODEL=llama3.2 # Fallback model

# ============================================================================
# ComfyUI Configuration
# ============================================================================
COMFYUI_ENABLED=false
COMFYUI_HOST=http://localhost:8188
COMFYUI_TIMEOUT=300

# ============================================================================
# Database Configuration
# ============================================================================
# Options: sqlite:///./noslop.db, postgresql://user:pass@localhost/noslop
DATABASE_URL=sqlite:///./noslop.db

# ============================================================================
# Storage Configuration
# ============================================================================
MEDIA_STORAGE_PATH=./media
PROJECT_STORAGE_PATH=./projects
LOG_STORAGE_PATH=./logs

# ============================================================================
# Resource Limits
# ============================================================================
MAX_CONCURRENT_TASKS=5
MAX_PROJECT_SIZE_MB=10240
MAX_WORKERS_PER_PROJECT=10

# ============================================================================
# FFmpeg Configuration
# ============================================================================
FFMPEG_PATH=ffmpeg
FFPROBE_PATH=ffprobe

# ============================================================================
# Admin AI Personality Defaults
# ============================================================================
DEFAULT_PERSONALITY=balanced
DEFAULT_CREATIVITY=0.7
DEFAULT_FORMALITY=0.5
DEFAULT_VERBOSITY=0.6
DEFAULT_ENTHUSIASM=0.7
DEFAULT_TECHNICAL_DEPTH=0.6

# ============================================================================
# Security Settings
# ============================================================================
# SECRET_KEY=your-secret-key-here  # Uncomment and set for production
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_PROJECT_MANAGER=true
ENABLE_WORKER_AGENTS=false
ENABLE_BLOCKCHAIN=false
ENABLE_MESH_NETWORK=false
